<div class="pokemonDetails">
    <a href="/pokemonList/{{name}}">
        <div>
            <img src=
            "https://assets.pokemon.com/assets/cms2/img/pokedex/full/{{#padID id}}{{/padID}}.png"
                alt="{{name}}" />
        </div>
        <div class="pokemonName" id="pokemonName">
            <h1>{{#capitalizeFirstLetter name}}{{/capitalizeFirstLetter}}</h1>
        </div>
        <div class="pokemonInfo">
            <p>ID: {{#padID id}}{{/padID}}</p>
        </div>
    </a>
</div>

return (
        <>
        {
            (!data) ? "" : (
                <>
                    <h1>{data.name}</h1>
                    <img src={`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/${data.id}.svg`} alt="" />
                    <div className="abilities">
                        {
                            data.abilities.map(poke=>{
                                return(
                                    <>
                                     <div className="group">
                                        <h2>{poke.ability.name}</h2>
                                    </div>
                                    </>
                                )
                            })
                        }
                    </div>
                    <div className="base-stat">
                        {
                            data.stats.map(poke=>{
                                return(
                                    <>
                                        <h3>{poke.stat.name}:{poke.base_stat}</h3>
                                    </>
                                )
                            })
                        }
                    </div>
                </>
            )
        }

        </>
    )